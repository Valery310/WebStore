@model WebStore.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}
<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Вход</h2>
                <form asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly"
                         class="text-danger"></div>
                    <input asp-for="UserName"
                           placeholder="@nameof(Model.UserName)" />
                    <input asp-for="Password"
                           placeholder="@nameof(Model.Password)" />
                    <input asp-for="RememberMe"
                           placeholder="@nameof(Model.RememberMe)" />
                    <button type="submit" class="btn
btn-default">
                        Войти
                    </button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section>
