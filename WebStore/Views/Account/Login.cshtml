@model WebStore.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}
<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Вход</h2>
                <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" asp-route-ReturnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="ModelOnly"
                         class="text-danger"></div>
                    <input asp-for="UserName" placeholder="Логин" />
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <span>
                        <input asp-for="RememberMe" class="checkbox" />
                        Запомнить меня
                    </span>

                    <button type="submit" class="btn btn-default">
                        Войти
                    </button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section>
