@model IEnumerable<EmployeeView>
<div class="container">
    <h3>Сотрудники</h3>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Табельный номер</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.SurName</td>
                    <td>@item.Patronymic</td>
                    <td>@item.Age</td>
                    <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id">Детали</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
</div>    
