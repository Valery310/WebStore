@model IEnumerable<WebStore.ViewModel.EmployeeViewModel>
@{
    ViewData["Title"] = "Список сотрудников";
}
<div class="container">

    <h3>Сотрудники</h3>
    <hr />
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-controller="Employees" class="btn btn-success">Добавить</a>
    }
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Табельный номер</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                </td>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronymic</td>
                <td>@item.Age</td>
                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id">Детали</a></td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
</div>
