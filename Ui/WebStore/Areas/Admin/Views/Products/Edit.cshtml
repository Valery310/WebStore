@model ProductViewModel
@{
    ViewData["Title"] = "Редактирование товара";
}
<div id="page-wrapper">
    <div id="page-inner">
        <h2>@ViewData["Title"]</h2>
        <h4>Товар</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" class="form-control" value="@Model.Order" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label"></label>
                        <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" value="@Model.Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandId" class="control-label"></label>
                        <select asp-for="BrandId" asp-items="@Model.Brands" class="form-control">
                            <option selected="selected" value="-1">
                                Выберите бренд
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SectionId" class="control-label"></label>
                        <select asp-for="SectionId" asp-items="@Model.Sections" class="form-control">
                            <option selected="selected" disabled="disabled">
                                Выберите секцию
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Назад к списку</a>
        </div>
        </div>
</div>