@model EmployeeViewModel
@{
    ViewData["Title"] = "Информция о сотруднике";
}

<div class="container">
    <h3>Сотрудники</h3>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Табельный номер</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.FirstName</td>
                <td>@Model.SurName</td>
                <td>@Model.Patronymic</td>
                <td>@Model.Age</td>
            </tr>
        </tbody>
    </table>
    <a asp-controller="Employees" asp-action="Index" class="btn btn-default">К общему списку</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
</div>
